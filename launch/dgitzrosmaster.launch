<!--xml-->
<launch>
<node name="$(env ROS_HOSTNAME)_master_node" pkg="icarus_rover_v2" type="master_node"  output="screen" clear_params="true">
        <param name="startup_delay"       value="0.0"/>
	    <param name="verbosity_level"       value="DEBUG"/>
        <param name="require_pps_to_start"  value="false"/>    
        <param name="loop1_rate"            value="1"/> <!-- device,resource available, -->    
        <param name="loop2_rate"            value="10"/> <!-- process update, -->  
</node>
<node name="$(env ROS_HOSTNAME)_audio_node" pkg="icarus_rover_v2" type="audio_node"  output="screen" clear_params="true">
	    <param name="verbosity_level"       value="DEBUG"/>
        <param name="require_pps_to_start"  value="false"/>    
        <param name="loop1_rate"            value="50"/> <!-- check if should trigger audio record -->    
        <param name="loop2_rate"            value="10"/> <!-- process update --> 
        <param name="audiostage_directory"  value="/home/robot/storage/AUDIO/"/>
        <param name="audiofile_length"      value="2.0"/>
        <param name="audiobuffer_length"    value="30.0" />
</node>
</launch>
