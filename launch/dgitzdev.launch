<!--xml-->
<launch>
<node name="$(env ROS_HOSTNAME)_master_node" pkg="icarus_rover_v2" type="master_node"  output="screen" clear_params="true">
        <param name="startup_delay"       value="0.0"/>
	    <param name="verbosity_level"       value="NOTICE"/>
        <param name="require_pps_to_start"  value="false"/>    
        <param name="loop1_rate"            value="1"/> <!-- device,resource available, -->    
        <param name="loop2_rate"            value="10"/> <!-- process update, -->  
</node>
<node name="$(env ROS_HOSTNAME)_command_node" pkg="icarus_rover_v2" type="command_node"  output="screen" clear_params="true">
        <param name="verbosity_level"       value="NOTICE"/>
        <param name="startup_delay"       value="10.0"/> 
        <param name="require_pps_to_start"  value="false"/> 
        <param name="loop1_rate"            value="2.0"/> <!-- Armed State Publish -->  
        <param name="loop2_rate"            value="5.0"/> <!-- Process Update -->
        <param name="loop3_rate"            value="10.0"/> <!-- Periodic Commands (max) -->
        <param name="ready_to_arm_topic1"   value="/ControlModule1_hatcontroller_node/readytoarm"/>
        <param name="ready_to_arm_topic2"   value="/ControlModule1_safety_node/readytoarm"/>-->
        <param name="ready_to_arm_topic3"   value="/ControlModule2_diagnostic_node/readytoarm"/>
        <param name="ready_to_arm_topic4"   value="/ControlModule2_networktransceiver_node/readytoarm"/>
        <param name="user_command_topic" value="/DriverStation/user_command"/>
</node>
<node name="$(env ROS_HOSTNAME)_navigation_node" pkg="icarus_rover_v2" type="navigation_node"  output="screen" clear_params="true">
        <param name="verbosity_level"       value="NOTICE"/>
        <param name="startup_delay"       value="2.0"/> 
        <param name="require_pps_to_start"  value="false"/> 
        <param name="loop1_rate"            value="2.0"/>  <!-- pins publish -->
        <param name="loop2_rate"            value="5.0"/>  
        <param name="loop3_rate"            value="10.0"/> 
</node>
<node name="$(env ROS_HOSTNAME)_datalogger_node" pkg="icarus_rover_v2" type="datalogger_node"  output="screen" clear_params="true">
        <param name="startup_delay"       value="0.0"/>
        <param name="verbosity_level"       value="NOTICE"/>
        <param name="require_pps_to_start"  value="false"/> 
        <param name="LogFile_Duration"      value="1800.0"/>
        <param name="LogFile_Directory"     value="/home/robot/Documents/logs/"/>
</node>
</launch>
